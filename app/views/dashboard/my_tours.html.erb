<div class="container">
  <div class="dashboard">
    <div class="header-tours">
      <h1>My Tours</h1>
    </div>

     <div class="welcome-dashboard">
    <% if current_user.sign_in_count == 1 %>
      <p> Welcome <%= current_user.first_name %>! Create your first tour below.</p>
    <%end%>
    </div>
    <div class="new-message">
      <div class="new-message-button">
        <button type="button" class="btn btn-main-pnk new-tour-margin" data-toggle="modal" data-target="#addTourModal">Add new tour</button></div>
    </div>
    <% @tours.each do |tour| %>
      <%= render "tour", tour: tour %>
    <%end%>
  </div>
</div>

<!-- Modal -->
<div class="modal fade" id="addTourModal" tabindex="-1" role="dialog" aria-labelledby="addTourModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header show-modal-header" >
       <button type="button" class="close show-close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
      <h3>Add a new tour!</h3>
    </div>
    <div class="modal-body">

     <%= simple_form_for(@tour) do |f| %>
<%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

    <div class="form-inputs">
      <%= f.input :title %>
      <%= f.input :description, as: :text, :input_html => {:rows => 6} %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Add", :class => "btn-form-blue" %>
    </div>
  <% end %>



    </div>
  </div>
</div>
</div>



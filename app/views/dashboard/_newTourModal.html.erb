<%= simple_form_for(@tour, remote: true) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :title, :placeholder => "E.g. Discover the Secrets of Lisbon" %>
    <%= f.input :description, as: :text, :input_html => {:rows => 6}, :placeholder => "Share the story of your tour, be creative!\n\nThis story is the selling point of your tour.You need to entice your prospective customer to pick your tour to discover the respective city in a unique way." %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Next", :class => "btn-form-blue" %>
  </div>
<% end %>

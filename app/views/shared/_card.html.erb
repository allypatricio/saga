<% if tour.id != nil %>
<div class="card ">
  <div class="card-body" style="background-image: linear-gradient(rgba(0,0,0,0.05), rgba(0,0,0,0)), url(http://via.placeholder.com/500x500);">
    <span class="card-category">Tour category</span>
    <div class="card-description">
      <h2>Tour Title></h2>
    </div>
    <% if tour.user.photo.url == nil %>
    <i class="far fa-user card-user avatar-border-white-i"></i>
    <% else %>
    <%= image_tag tour.user.photo.url(:thumnail), :class => "far fa-user card-user avatar-small avatar-border-white"%>
    <% end %>
    <%=link_to tour_path(tour) do %>
    <div class="card-footer">
      <p><i class="fas fa-map-marker"></i>Tour Start point (Tour price)</p>
      <div class="card-time">
        <p>[Tour duration]</p>
      </div>
    </div>
    <%end%>
  </div>
</div>
<%end%>

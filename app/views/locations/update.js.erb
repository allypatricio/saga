<% if @location.errors.any? %>
// When there are errors, render them
  function renderUpdatedForm(input) {
    const modalBody = document.getElementById('<%= "updateLocationModalForm#{@location.id}" %>');
    modalBody.innerHTML = input;
  }

  renderUpdatedForm('<%= j render "tours/editLocationModalForm@", locals: {location: @location} %>');

<% else %>
  window.location.replace('<%= "/tours/#{@tour.id}/edit" %>')
<% end %>



<% placeholder_text = "Hi #{@booking.tour.user.first_name.capitalize}!
I'm really looking forward to playing your tour!"%>

<h1>Book your tour with <%= @booking.tour.user.first_name.capitalize %>!</h1>

<%= simple_form_for([@tour, @booking]) do |f| %>
  <div class="form-inputs">
    <%= f.input :content, as: :string, label: "Select a date and time" %>
    <%= f.input :message, :input_html => {:rows => 9}, label: "Add a message for #{@booking.experience.user.first_name.capitalize}", placeholder: placeholder_text %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

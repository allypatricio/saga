
<div class="show-container">

  <% if @tour.locations.first.photo.url != nil %>
  <div class="gallery" style="background-image: linear-gradient(rgba(0,0,0,0.05), rgba(0,0,0,0)), url(<%= @tour.locations.first.photo%>);">
    <%else%>

    <div class="gallery" style="background-image: linear-gradient(rgba(0,0,0,0.05), rgba(0,0,0,0)), url(http://via.placeholder.com/500x500);">
      <% end %>
      <a href="/"><i class="fas fa-chevron-circle-right fa-3x"></i></a>
      <a href=""><i class="fas fa-chevron-circle-left fa-3x"></i></a>

      <%= link_to "Back", tours_path, :class => "btn-back-pnk show-back" %>
    </div>
  </div>

  <div class="flex-container">
    <div class="col left-footer">
      <h1><%= @tour.title.capitalize %></h1>
      <p><%= @tour.description.capitalize %></p>
      <div class="show-avatar-position">
        <% if @tour.user.photo.url == nil %>
        <i class="far fa-user card-user avatar-border-turqoise-i"></i>
        <% else %>
        <%= image_tag tour.user.photo.url(:thumnail), :class => "far fa-user card-user avatar-small avatar-border-turqoise"%>
        <% end %>
      </div>
      <h3>Reviews:</h3>
      <a><i class="fas fa-star"></i></a>
    </div>

    <div class="col right-footer">
<div class="button-book">
<button type="button" class="btn-main-pnk show-book text-center" data-toggle="modal" data-target="#bookNowModal">Book Now</button>
</div>
     <p>Price: <%= @tour.price %>â‚¬</p>
     <p>Duration: <%= @tour.duration %>h</p>
     <p>Starting Location: <%= @tour.locations.first.address %></p>
     <div id="map" style="width: 100%; height: 40vh;" data-markers="<%= @markers.to_json %>"></div>
   </div>
 </div>
</div>

<!-- Modal -->
<div class="modal fade" id="bookNowModal" tabindex="-1" role="dialog" aria-labelledby="bookNowModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header" >
        <div class="title-center" style="text-align: center">
        <h3>Your Booking</h3>
        </div>
          <p>Booking: <%= @tour.title%></p>
          <p>Price: <%= @tour.price %></p>
          <p>Duration: <%= @tour.duration %></p>
          <p>Starting Location: <%= @tour.locations.first.address %></p>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= simple_form_for([@tour, @booking]) do |f| %>

          <div class="form-actions" style="text-align: center;">
            <%= f.button :submit, "Confirm", :class => "btn-main-pnk" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>


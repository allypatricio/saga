<div class="map-wrapper">
  <div class="map-container-full-page">
    <div id="map"
      style="width: 100%;
      height: 100%;"
      data-markers="<%= @markers.to_json %>"
    ></div>
  </div>

<div class="edit-tour-menu">
  <div class="searchbox">
    <%= simple_form_for [@tour, @location] do |f| %>

      <label for="address">Add Location</label>
      <%= f.input :address, label: false, wrapper_html: {class: "form-inline"} do %>
        <%= f.input_field :address, label: false %>
        <%= f.button :submit, "+", :class => "form-button" %>
      <% end %>
    <% end %>
  </div>

  <div class="locations-list">
  <p><strong>List of Locations</strong></p>

  <ul class="list-unstyled">
    <% @locations_ordered.each do |location| %>
      <li class="location-box">
        <%= link_to edit_tour_location_path(@tour, location) do %>
          <%= truncate "#{location.position}: #{location.address}", length: 45 %>
        <% end %>
      </li>
    <% end %>
  </ul>

  </div>

</div>

</div>




